{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "watch": true,
    "emitDeclarationOnly": false,
    "module": "none",
    "resolveJsonModule": false
  },
  "watchOptions": {
    "excludeDirectories": [
      "lib",
      "css",
      "jwt",
      "react",
      "next",
      "client",
      "providers",
      "core",
      "utils"
    ],
    "excludeFiles": [
      "index.d.ts",
      "index.js",
      "adapters.d.ts",
      "middleware.d.ts",
      "middleware.js"
    ]
  }
}
